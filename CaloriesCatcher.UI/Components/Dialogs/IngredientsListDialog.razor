<MudDialog>
    <DialogContent>
        <MudList Clickable="true">
            <MudListSubheader>
                <MudText Typo="Typo.h5" Color="Color.Primary">Ingredients:</MudText>
            </MudListSubheader>
            @foreach(Ingredients item in _ingredientsList)
            {
                <MudListItem  Class="m-auto" Text="@item.food">
                    <NestedList>
                        <MudListItem Class="my-2" Icon="@Icons.Material.Filled.Circle" IconSize="Size.Small"> 
                           Quantity: @item.quantity
                        </MudListItem>
                        <MudListItem Class="my-2" Icon="@Icons.Material.Filled.Circle" IconSize="Size.Small">
                            Measure: @item.measure
                        </MudListItem>
                        <MudListItem Class="my-2" Icon="@Icons.Material.Filled.Circle" IconSize="Size.Small">
                            Weight: @item.weight 
                        </MudListItem>
                        <MudListItem Class="my-2" Icon="@Icons.Material.Filled.Circle" IconSize="Size.Small">
                            Food Category: @item.foodCategory
                        </MudListItem>
                    </NestedList>
                </MudListItem>
            }
        </MudList>
    </DialogContent>
    <DialogActions>
            <MudButton OnClick="CloseDialog">Close</MudButton>
        </DialogActions>
</MudDialog>


@code {
    /* Services */
    [Inject] IDialogService dialogService { get; set; } = default!;
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public List<Ingredients> _ingredientsList { get; set; }
    
    private void CloseDialog()
    {
        DialogOptions closeOnEscapeKey = new DialogOptions() { CloseOnEscapeKey = true };
        MudDialog.Close(DialogResult.Ok(true));
    }}