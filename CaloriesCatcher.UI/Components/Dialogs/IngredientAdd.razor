@using CaloriesCatcher.UI.Model;
@using CaloriesCatcher.UI.Service.IService;
<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="ingredient.IngredientName" T="string" Label="Ingredient Name"></MudTextField>
        <MudTextField @bind-Value="ingredient.Quantity" T="double" Label="Quantity"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="SetQuantityAndIngredient">Add Ingredient</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [Inject] IDialogService dialogService { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
    [Parameter] public RecipeIngredientDto ingredient { get; set; } = default!;
    [CascadingParameter] Task<AuthenticationState> authenticationState { get; set; } = default!;
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private async Task SetQuantityAndIngredient()
    {
        

        DialogOptions closeOnEscapeKey = new DialogOptions() { CloseOnEscapeKey = true };
        
        MudDialog.Close(DialogResult.Ok(ingredient));
    }

}
