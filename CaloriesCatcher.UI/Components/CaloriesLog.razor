@using CaloriesCatcher.UI.Model;
@using CaloriesCatcher.UI.Service.IService;
<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="caloriesDto.CalorieName" T="string" Label="Calories"></MudTextField>
        <MudTextField @bind-Value="caloriesDto.Calorie" T="double" Label="CalorieName"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="LogCalories">Log Calorie</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Inject]
    IDialogService dialogService { get; set; } = default!;
    [Inject]
    private ICalories caloriesService { get; set; } = default!;
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private CaloriesDto caloriesDto = new CaloriesDto();
    void LogCalories()
    {
        caloriesDto.Date = DateTime.Now;
        caloriesDto.UserId = "testId";
        caloriesService.CreateCaloriesAsync(caloriesDto);
        DialogOptions closeOnEscapeKey = new DialogOptions() { CloseOnEscapeKey = true };
        MudDialog.Close(DialogResult.Ok(true));
    }

}
