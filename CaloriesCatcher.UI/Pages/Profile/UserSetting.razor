@page "/usersetting"
@using CaloriesCatcher.UI.Components;
@using CaloriesCatcher.UI.Model;
@using CaloriesCatcher.UI.Service.IService;
@using Newtonsoft.Json;
<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudText Typo="Typo.h3">User Settings</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudList Class=" align-center justify-center">
            <MudListItem>Height</MudListItem>
            <MudListItem>Weight</MudListItem>
            <MudListItem>Daily Calorie Goal</MudListItem>
            <MudListItem>Age</MudListItem>
            <MudListItem>Gender</MudListItem>
        </MudList>
    </MudItem>
    <MudItem xs="3">
        <MudList Class=" align-center justify-center">
            <MudListItem><MudText>@Height</MudText></MudListItem>
            <MudListItem><MudText>@Weight</MudText></MudListItem>
            <MudListItem><MudText>@DailyGoal</MudText></MudListItem>
            <MudListItem><MudText>@Age</MudText></MudListItem>
            <MudListItem><MudText>@Gender</MudText></MudListItem>
        </MudList>
    </MudItem>
    <MudItem xs="3">
        <MudList Class=" align-center justify-center">
            <MudListItem><MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" /></MudListItem>
            <MudListItem><MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" /></MudListItem>
            <MudListItem><MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" /></MudListItem>
            <MudListItem><MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" /></MudListItem>
            <MudListItem><MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" /></MudListItem>
        </MudList>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudPaper Class="d-flex align-left  mud-width-full py-8">User Name:</MudPaper>
        <MudPaper Class="d-flex align-left  mud-width-full py-8">Password:</MudPaper>
    </MudItem>
</MudGrid>
@code {
    public string Height { get; set; }
    public string Weight { get; set; }
    public string DailyGoal { get; set; }
    public int Age { get; set; }
    public string Gender { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Height = "5";
        Weight = "150";
        DailyGoal = "2000";
        Age = 22;
        Gender = "Penguin";

    }
}
